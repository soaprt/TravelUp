<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/input_block_stroke_radius"
    android:layout_marginTop="@dimen/ticket_list_item_vertical_margin"
    android:layout_marginBottom="@dimen/ticket_list_item_vertical_margin"
    android:layout_marginStart="@dimen/ticket_list_item_horizontal_margin"
    android:layout_marginEnd="@dimen/ticket_list_item_horizontal_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/InputBlockStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp">

                <TextView
                    android:id="@+id/lblDepartureDate"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_departure_date"
                    app:layout_constraintEnd_toStartOf="@+id/lblDepartureTime"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/label_departure_date" />

                <TextView
                    android:id="@+id/departureDate"
                    style="@style/DataFieldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/lblDepartureDate"
                    app:layout_constraintTop_toBottomOf="@+id/lblDepartureDate"
                    tools:text="@string/label_no_data" />

                <TextView
                    android:id="@+id/lblDepartureTime"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_departure_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/lblDepartureDate"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/label_departure_time" />

                <TextView
                    android:id="@+id/departureTime"
                    style="@style/DataFieldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/lblDepartureTime"
                    app:layout_constraintTop_toBottomOf="@+id/lblDepartureTime"
                    tools:text="@string/label_no_data" />

                <TextView
                    android:id="@+id/lblDepartureFromTo"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_flight"
                    app:layout_constraintStart_toStartOf="@+id/lblDepartureDate"
                    app:layout_constraintTop_toBottomOf="@+id/departureDate"
                    tools:text="@string/label_flight" />

                <TextView
                    android:id="@+id/departureFromTo"
                    style="@style/DataFieldStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    app:layout_constraintEnd_toEndOf="@+id/lblDepartureTime"
                    app:layout_constraintStart_toStartOf="@+id/lblDepartureDate"
                    app:layout_constraintTop_toBottomOf="@+id/lblDepartureFromTo"
                    tools:text="@string/label_no_data" />

                <TextView
                    android:id="@+id/lblCarrierName"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_carrier_name"
                    app:layout_constraintStart_toStartOf="@+id/lblDepartureFromTo"
                    app:layout_constraintTop_toBottomOf="@+id/departureFromTo"
                    tools:text="@string/label_carrier_name" />

                <TextView
                    android:id="@+id/carrierName"
                    style="@style/DataFieldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    app:layout_constraintStart_toStartOf="@+id/lblCarrierName"
                    app:layout_constraintTop_toBottomOf="@+id/lblCarrierName"
                    tools:text="@string/label_no_data" />

                <TextView
                    android:id="@+id/lblFlightPrice"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_flight_price"
                    app:layout_constraintStart_toStartOf="@+id/lblCarrierName"
                    app:layout_constraintTop_toBottomOf="@+id/carrierName"
                    tools:text="@string/label_flight_price" />

                <TextView
                    android:id="@+id/flightPrice"
                    style="@style/DataFieldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/lblFlightPrice"
                    app:layout_constraintTop_toBottomOf="@+id/lblFlightPrice"
                    tools:text="@string/label_no_data" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>