<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputFieldStyle">
        <item name="android:layout_marginStart">@dimen/indent_16dp</item>
        <item name="android:layout_marginLeft">@dimen/indent_16dp</item>
        <item name="android:layout_marginTop">@dimen/indent_16dp</item>
        <item name="android:layout_marginEnd">@dimen/indent_16dp</item>
        <item name="android:layout_marginRight">@dimen/indent_16dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginTop">@dimen/indent_32dp</item>
        <item name="android:background">@drawable/button_state_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>